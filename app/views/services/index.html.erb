<h1>Listing services</h1>

<%= form_tag(services_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search services" %>
  <%= submit_tag "Search", :name => nil, class: 'btn btn-info' %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Code</th>
      <th>Scode</th>
      <th>Sname</th>
      <th>Charges</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.code %></td>
        <td><%= service.scode %></td>
        <td><%= service.sname %></td>
        <td><%= service.charges %></td>
        <td><%= link_to 'Show', service, class: 'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_service_path(service), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', service, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Service', new_service_path, class: 'btn btn-info' %>
