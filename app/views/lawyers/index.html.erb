<h1>List Lawyers</h1>

<%= form_tag(lawyers_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search lawyers" %>
  <%= submit_tag "Search", :name => nil, class: 'btn btn-info' %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Location</th>
      <th>Experience</th>
      <th>Rating</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lawyers.each do |lawyer| %>
      <tr>
        <td><%= lawyer.name %></td>
        <td><%= lawyer.code %></td>
        <td><%= lawyer.location %></td>
        <td><%= lawyer.experience %></td>
        <td><%= lawyer.rating %></td>
        <td><%= link_to 'Show', lawyer, class: 'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_lawyer_path(lawyer), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', lawyer, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Add Lawyers", new_lawyer_path, class: 'btn btn-info' %>